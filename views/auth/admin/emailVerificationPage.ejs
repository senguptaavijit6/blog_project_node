<%- include("../../common/head.ejs") %>

    <body class="bg-primary">
        <%- include("../../common/alerts.ejs") %>
        <div id="layoutAuthentication">
            <div id="layoutAuthentication_content">
                <main>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-5">
                                <div class="card shadow-lg border-0 rounded-lg mt-5">
                                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Email Verification</h3></div>
                                    <div class="card-body">
                                        <div class="small mb-3 text-muted">Enter the code that we've sent to your email</div>
                                        <small style="color: limegreen;">If you cannot find our email consider checking in spam box</small>
                                        <form action="/admin/verifyEmail/<%= userEmail %>?fallback=<%= fallback %>" method="POST">
                                            <!-- <div class="form-floating mb-3">
                                                <input class="form-control" id="inputEmailVerificationId" type="text" placeholder="Unique Id" name="uniqueId" />
                                                <label for="inputEmailVerificationId">Verifiaction Unique ID</label>
                                            </div> -->
                                            <div class="form-floating mb-3">
                                                <input class="form-control" id="inputEmailVerificationCode" type="text" placeholder="OTP" name="otp" />
                                                <label for="inputEmailVerificationCode">Verifiaction Code</label>
                                            </div>
                                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                                <button class="btn btn-primary" type="submit">Verify</button>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="card-footer text-center py-3">
                                        <div class="small"><a href="/admin/registerPage">Wrong email? Change now</a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
            <%- include("../../common/footer.ejs") %>
        </div>
        <%- include("../../common/scripts.ejs") %>
    </body>
</html>
