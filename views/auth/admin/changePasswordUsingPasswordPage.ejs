<%- include("../../common/head.ejs") %>

    <body class="bg-primary">
        <%- include("../../common/alerts.ejs") %>
            <div id="layoutAuthentication">
                <div id="layoutAuthentication_content">
                    <main>
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-lg-5">
                                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                                        <div class="card-header">
                                            <h3 class="text-center font-weight-light my-4">Change password</h3>
                                        </div>
                                        <div class="card-body">
                                            <form action="/admin/changePasswordUsingPassword" method="POST">
                                                <input type="hidden" name="email" value="<%= user.email %>">
                                                <div class="form-floating mb-3">
                                                    <input class="form-control" id="inputOldPassword" type="password"
                                                        placeholder="Enter old password" name="oldPassword" />
                                                    <label for="inputOldPassword">Enter current password</label>
                                                </div>
                                                <div class="small mb-3 text-muted">Enter a new password you want to set
                                                </div>
                                                <div class="form-floating mb-3">
                                                    <input class="form-control" id="inputNewPassword" type="password"
                                                        placeholder="Enter new password" name="newPassword" />
                                                    <label for="inputNewPassword">Enter new password</label>
                                                </div>
                                                <div
                                                    class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                                    <button class="btn btn-primary" type="submit">Change
                                                        Password</button>
                                                </div>
                                            </form>
                                        </div>
                                        <!-- <div class="card-footer text-center py-3">
                                        <div class="small"><a href="/admin/registerPage">Wrong email? Change now</a></div>
                                    </div> -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </main>
                </div>
                <%- include("../../common/footer.ejs") %>
            </div>
            <%- include("../../common/scripts.ejs") %>
    </body>

    </html>