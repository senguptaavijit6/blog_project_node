<%- include("../../common/head.ejs") %>

    <body class="bg-success">
        <%- include("../../common/alerts.ejs") %>
            <div id="layoutAuthentication">
                <div id="layoutAuthentication_content">
                    <main>
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-lg-7">
                                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                                        <div class="card-header">
                                            <h3 class="text-center font-weight-light my-4">Login as Admin</h3>
                                        </div>
                                        <div class="card-body">
                                            <form method="post" action="/admin/login">

                                                <div class="form-floating mb-3">
                                                    <input class="form-control" id="inputEmail" type="email"
                                                        placeholder="name@example.com" name="email" />
                                                    <label for="inputEmail">Email address</label>
                                                </div>

                                                <div class="form-floating mb-3">
                                                    <input class="form-control" id="inputPassword" type="password"
                                                        placeholder="Create a password" name="password" />
                                                    <label for="inputPassword">Password</label>
                                                </div>
                                                <div class="mt-4 mb-0">
                                                    <a href="/admin/forgotPasswordPage">Lost password?</a>
                                                </div>
                                                <div class="mt-4 mb-0">
                                                    <div class="d-grid m-3">
                                                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                        <div class="card-footer text-center py-3 bg-warning">
                                            <div class="small"><a href="/loginPage" class="text-black">
                                                    Login as User</a>
                                            </div>
                                        </div>
                                        <div class="card-footer text-center py-3">
                                            <div class="small"><a href="/admin/registerPage" class="text-black">Don't
                                                    have
                                                    an
                                                    account? Go to Register</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </main>
                </div>
                <%- include("../../common/footer.ejs") %>
            </div>
            <%- include("../../common/scripts.ejs") %>
    </body>

    </html>