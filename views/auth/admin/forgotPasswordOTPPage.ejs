<%- include("../../common/head.ejs") %>

    <body class="bg-primary">
        <%- include("../../common/alerts.ejs") %>
        <div id="layoutAuthentication">
            <div id="layoutAuthentication_content">
                <main>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-5">
                                <div class="card shadow-lg border-0 rounded-lg mt-5">
                                    <div class="card-header"><h3 class="text-center font-weight-light my-4">OTP Verification</h3></div>
                                    <div class="card-body">
                                        <div class="small mb-3 text-muted">Enter the OTP you've received on your registered email id</div>
                                        <form action="/admin/forgotPasswordOTPVerifyPage" method="POST">
                                            <input type="hidden" name="email" value="<%= userEmail %>">
                                            <div class="form-floating mb-3">
                                                <input class="form-control" id="inputEmail" type="text" placeholder="Enter received OTP" name="otp" />
                                                <label for="inputEmail">Enter OTP</label>
                                            </div>
                                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                                <button class="btn btn-primary" type="submit">Verify</button>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="card-footer text-center py-3">
                                        <div class="small"><a href="/admin/forgotPasswordPage">Wrong email? Change now</a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
            <%- include("../../common/footer.ejs") %>
        </div>
        <%- include("../../common/scripts.ejs") %>
    </body>
</html>
