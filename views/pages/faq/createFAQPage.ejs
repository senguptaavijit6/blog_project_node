                <div id="layoutSidenav_content">
                    <main>
                        <%- include("../../common/alerts.ejs") %>
                        <section style="background-color: #eee;">
                            <div class="container py-5">
                                <h1 class="mt-4">New FAQ</h1>
                                <div class="row">
                                    <div class="col">
                                        <nav aria-label="breadcrumb" class="bg-body-tertiary rounded-3 p-3 mb-4">
                                            <ol class="breadcrumb mb-0">
                                                <li class="breadcrumb-item"><a href="/admin/allFAQsPage">FAQ Management</a></li>
                                                <li class="breadcrumb-item active" aria-current="page">Create FAQ</li>
                                            </ol>
                                        </nav>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="card mb-4">
                                            <div class="card-body">
                                                <form action="/admin/createFAQ" method="post">
                                                    <div class="row mb-3">
                                                        <div class="col-12">
                                                            <div class="form-floating">
                                                                <input class="form-control border-danger" id="inputQuestion" type="text"
                                                                    placeholder="Enter FAQ Question" name="question" />
                                                                <label for="inputQuestion">FAQ Question</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row mb-3">
                                                        <div class="col-12">
                                                            <div class="form-floating">
                                                                <textarea class="form-control border-success" rows="2" id="inputAnswer" type="text"
                                                                    placeholder="Enter FAQ Answer" name="answer"></textarea>
                                                                <label for="inputAnswer">Corresponding FAQ Answer</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row mb-3">
                                                        <div class="col-12">
                                                            <div class="form-floating mb-3 mb-md-0">
                                                                <label for="selectstatus" class="pb-1">Choose FAQ status:</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-floating mb-3 mb-md-0">
                                                                <select id="selectstatus" name="status"
                                                                    class="form-control pt-1">
                                                                    <option value="active" selected>Active</option>
                                                                    <option value="inactive">Inactive</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row mb-3">
                                                        <div class="col-12">
                                                            <button class="btn btn-primary" type="submit">Create</button>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    
                                </div>
                            </div>
