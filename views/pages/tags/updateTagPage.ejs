                    </div>
                    <div class="sb-sidenav-footer">
                        <div class="small">Logged in as: <%= user.role %>
                        </div>
                        <%= user.firstName + " " + user.lastName %>
                    </div>
                </nav>
            </div>
            <div id="layoutSidenav_content">
                <main>
                    <%- include("../../common/alerts.ejs") %>
                        <section style="background-color: #eee;">
                            <div class="container py-5">
                                <h1 class="mt-4">Update Tag</h1>
                                <div class="row">
                                    <div class="col">
                                        <nav aria-label="breadcrumb" class="bg-body-tertiary rounded-3 p-3 mb-4">
                                            <ol class="breadcrumb mb-0">
                                                <li class="breadcrumb-item"><a href="/admin/allTagsPage">Tags
                                                        Management</a></li>
                                                <li class="breadcrumb-item active" aria-current="page">Edit Tag</li>
                                            </ol>
                                        </nav>
                                    </div>
                                </div>

                                <div class="row">
                                    
                                    <div class="col-12 my-2 py-2">
                                        <div class="card">
                                            <div class="card-body">
                                                <form action="/admin/updateTag/<%= TagData._id %>" method="post">
                                                    <div class="row mb-3">
                                                        <div class="col-12">
                                                            <div class="form-floating">
                                                                <input class="form-control" id="inputTagName" type="text"
                                                                    placeholder="Enter Tag Name" name="name" value="<%= TagData.name %>"/>
                                                                <label for="inputTagName">Tag Name</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    
                                                    <div class="row mb-3">
                                                        <div class="col-12">
                                                            <div class="form-floating mb-3 mb-md-0">
                                                                <label for="selectstatus" class="pb-1">Choose Tag status:</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-floating mb-3 mb-md-0">
                                                                <select id="selectstatus" name="status"
                                                                    class="form-control pt-1" type="text">
                                                                    <option value="active" <%= TagData.status === "active" ? 'selected' : '' %>>Active</option>
                                                                    <option value="inactive" <%= TagData.status === "inactive" ? 'selected' : '' %>>Inactive</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row mb-3">
                                                        <div class="col-12">
                                                            <button class="btn btn-primary" type="submit">Update</button>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="my-3">
                                        <a href="/admin/createTagPage" class="btn btn-primary">Add Tag</a>
                                    </div>
                                </div>
                            </div>
                        </section>
                </main>
                <%- include("../../common/footer.ejs") %>

            </div>
            <%- include("../../common/scripts.ejs") %>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js"
                    crossorigin="anonymous"></script>
                <script src="/assets/demo/chart-area-demo.js"></script>
                <script src="/assets/demo/chart-bar-demo.js"></script>
                <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js"
                    crossorigin="anonymous"></script>
                <script src="/js/datatables-simple-demo.js"></script>

    </body>

    </html>