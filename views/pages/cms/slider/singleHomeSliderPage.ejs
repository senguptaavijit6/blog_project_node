<link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
<%- include("../../../common/head.ejs") %>

    <style>
        body {
            padding: 20px;
        }

        .preview-container {
            max-width: 1000px;
            margin: 0 auto;
        }

        .slide-preview {
            height: 500px;
            position: relative;
            margin-bottom: 30px;
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
        }

        .carousel-caption {
            background-color: rgba(0, 0, 0, 0.6);
            border-radius: 10px;
            padding: 20px;
            max-width: 600px;
            margin: 0 auto;
            position: absolute;
            right: 15%;
            left: 15%;
            bottom: 100px;
            text-align: center;
        }

        .btn-custom {
            background-color: #ff6b6b;
            border: none;
            margin-top: 15px;
            padding: 10px 25px;
            font-weight: 600;
            text-transform: uppercase;
            transition: all 0.3s ease;
        }

        .btn-custom:hover {
            background-color: #ff4757;
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        .carousel-heading {
            font-weight: 700;
            margin-bottom: 15px;
            font-size: 2.5rem;
        }

        .carousel-subheading-1 {
            font-style: italic;
            margin-bottom: 10px;
            font-size: 1.5rem;
        }

        .carousel-subheading-2 {
            font-weight: 300;
            margin-bottom: 20px;
            font-size: 1.2rem;
        }

        .preview-title {
            margin-bottom: 30px;
            padding-bottom: 10px;
            border-bottom: 2px solid #eee;
        }
    </style>

