						<div class="card-body">
							<table id="datatablesSimple">
								<thead>
									<tr>
										<th>Feature Image</th>
										<th>Blog Title</th>
										<th>Private Status</th>
										<th>Published status</th>
										<th>Publish time</th>
										<th>Likes & Dislikes</th>
										<th>Views</th>
										<th>Actions</th>
									</tr>
								</thead>
								<tfoot>
									<tr>
										<th>Feature Image</th>
										<th>Blog Title</th>
										<th>Private Status</th>
										<th>Published status</th>
										<th>Publish time</th>
										<th>Likes & Dislikes</th>
										<th>Views</th>
										<th>Actions</th>
									</tr>
								</tfoot>
								<tbody>

									<% blogsData.published.map(blogData => { %>
