                <div id="layoutSidenav_content">
                    <main>
                        <%- include("../../common/alerts.ejs") %>
                        <section style="background-color: #eee;">
                            <div class="container py-5">
                                <h1 class="mt-4">Update Testimonial</h1>
                                <div class="row">
                                    <div class="col">
                                        <nav aria-label="breadcrumb" class="bg-body-tertiary rounded-3 p-3 mb-4">
                                            <ol class="breadcrumb mb-0">
                                                <li class="breadcrumb-item"><a href="/admin/allTestimonialsPage">Testimonials Management</a></li>
                                                <li class="breadcrumb-item active" aria-current="page">Update Testimonial</li>
                                            </ol>
                                        </nav>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="card mb-4">
                                            <div class="card-body">
                                                <form action="/admin/updateTestimonial/<%= TestimonialData._id %>" method="post" enctype="multipart/form-data">
                                                    <div style="text-align: center;" class="mb-3">
                                                        <img src="/uploads/testimonials/<%= TestimonialData.clientImage %>" alt="Client Image" class="rounded-circle img-fluid" style="height: 250px; width: 250px; object-fit: cover;">
                                                    </div>
                                                    <div class="mb-3 text-center">
                                                        <% for(let i=0; i < TestimonialData.clientRating; i++) { %>
                                                            <i class="fa-solid fa-star" style="color: goldenrod"></i>
                                                        <% } %>
                                                        <% for(let i=0; i < (5-TestimonialData.clientRating); i++) { %>
                                                            <i class="fa-regular fa-star" style="color: black"></i>
                                                        <% } %>
                                                    </div>
                                                    <div class="row mb-3">
                                                        <div class="col-12">
                                                            <div class="form-floating">
                                                                <input class="form-control" id="inputClientName" type="text"
                                                                    placeholder="Enter Client Name" name="clientName" value="<%= TestimonialData.clientName %>"/>
                                                                <label for="inputClientName">Client Name </label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row mb-3">
                                                        <div class="col-12">
                                                            <div class="form-floating">
                                                                <input class="form-control" id="inputClientDesignation" type="text"
                                                                    placeholder="Enter Client Name" name="clientDesignation" value="<%= TestimonialData.clientDesignation %>" />
                                                                <label for="inputClientDesignation">Client Designation </label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row mb-3">
                                                        <div class="col-12">
                                                            <div class="form-floating">
                                                                <input class="form-control" id="inputClientDesignation" type="file" accept=".jpg, .jpeg, .png, .gif"
                                                                    placeholder="Enter Client Name" name="clientImage" />
                                                                <label for="inputClientDesignation">Change Client Image</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row mb-3">
                                                        <div class="col-12">
                                                            <div class="form-floating mb-3 mb-md-0">
                                                                <label for="selectStatus" class="pb-1">Choose Testimonial status:</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <div class="form-floating mb-3 mb-md-0">
                                                                <select id="selectStatus" name="status"
                                                                    class="form-control pt-1">
                                                                    <option value="active" <%= TestimonialData.status==='active' ? 'selected' : '' %>>Active</option>
                                                                    <option value="inactive" <%= TestimonialData.status==='inactive' ? 'selected' : '' %>>Inactive</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row mb-3">
                                                        <div class="col-12">
                                                            <div class="form-floating mb-3 mb-md-0">
                                                                <label for="selectRating" class="pb-1">Choose Testimonial status <span style="color: red">*</span></label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <div class="form-floating mb-3 mb-md-0">
                                                                <select id="selectRating" name="clientRating"
                                                                    class="form-control pt-1" type="number">
                                                                    <option disabled selected>Select Rating <span style="color: red">*</span></option>
                                                                    <option value=1 <%= TestimonialData.clientRating===1 ? 'selected' : '' %>>1</option>
                                                                    <option value=2 <%= TestimonialData.clientRating===2 ? 'selected' : '' %>>2</option>
                                                                    <option value=3 <%= TestimonialData.clientRating===3 ? 'selected' : '' %>>3</option>
                                                                    <option value=4 <%= TestimonialData.clientRating===4 ? 'selected' : '' %>>4</option>
                                                                    <option value=5 <%= TestimonialData.clientRating===5 ? 'selected' : '' %>>5</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row mb-3">
                                                        <div class="col-12">
                                                            <div class="form-floating">
                                                                <label for="inputClientMessage" class="form-label">Client Message </label>
                                                                <textarea row="10" class="form-control" id="inputClientMessage" type="text"
                                                                    placeholder="Enter Client Name" name="clientMessage" ><%= TestimonialData.clientMessage %></textarea>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row mb-3">
                                                        <div class="col-12">
                                                            <button class="btn btn-primary" type="submit">Update Testimonial</button>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    
                                </div>
                            </div>
                        </section>
